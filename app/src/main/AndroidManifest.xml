<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.danshi.danhanxiang.danshiapp">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <application
        android:name="com.danshi.danhanxiang.app.App"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.danshi.danhanxiang.activity.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.danshi.danhanxiang.activity.MainActivity"
                  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.danshi.danhanxiang.activity.MeiZhiDetailActivity"/>
        <activity android:name="com.danshi.danhanxiang.activity.NewsDetailActivity"/>
        <activity android:name="com.danshi.danhanxiang.activity.AboutMeActivity"/>
        <activity android:name="com.danshi.danhanxiang.activity.TechDetailActivity"/>
        <activity android:name="com.danshi.danhanxiang.activity.WeiXinDetailActivity"/>

    </application>

</manifest>